# Check if two words are anagrams 
# Example:
# find_anagrams("hello", "check") --> False
# find_anagrams("below", "elbow") --> True


def find_anagram(word, anagram):
    # [assignment] Add your code here
    wordOne = str(input("Enter your first word\n:"))
    firstWord = wordOne.lower()

    wordTwo = str(input("Enter your Second word\n:"))
    secondWord = wordTwo.lower()


    if(sorted(firstWord)==sorted(secondWord)):
        print("Anagram Found")
        return True
    elif (sorted(firstWord)!=sorted(secondWord)):
        print("No Anagrams Found")
        return False

find_anagram("firstWord", "secondWord")
